@model RoomTypes
@{
    ViewData["Title"] = "Edit Rooms";
}
<form class="Edit" asp-controller="RoomTypes" asp-action="edit" method="POST">
    <div class="row">        
        <div class="col-md-4 col-xs-6 col-sm-4">
            <div class="form-group">
                <label asp-for="roomTypeName"></label>                           
                <input type="text" class="form-control" asp-for="roomTypeName">
                <span class="text-danger" asp-validation-for="roomTypeName"></span>
            </div>
        </div>     
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <button class="btn btn-sm btn-primary" type="submit">Update</button>
    </div>     
 </form>
  
  