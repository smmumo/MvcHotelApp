
@model IEnumerable<RoomTypes>
@{
    ViewData["Title"] = "Room Types";
}
<div class="row">
    <div class="col-md-12">
        <div id="allHotels">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    @* <th>HotelName</th> *@
                    <th>RoomType</th>                   
                    <th>Action</th>    
                </thead>
                <tbody>
                    @foreach (var rooms in Model)
                    {              
                        <tr>                           
                            <td>@rooms.roomTypeName</td>                          
                            <td> 
                                <form asp-action="Delete" asp-controller="RoomTypes" asp-route-id="@rooms.room_type_id" method="POST">
                                    <a asp-controller="RoomTypes" asp-action="edit" asp-route-id="@rooms.room_type_id" class="btn btn-sm btn-primary">Edit</a>
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>                                    
                                </form>                    
                            </td>           
                        </tr>            
                    }         
                </tbody>     
            </table> 
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/customScript.js"></script>
}