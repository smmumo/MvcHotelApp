@model HotelEditViewModel

@{
    ViewData["Title"] = @Model.PageTitle;
}
<form class="UpdateHotelDetails" asp-action="Edit" asp-controller="hotels" method="POST">
    <div class="row">
        <div class="col-md-4 col-xs-6 col-sm-4">
            <div class="form-group">
                <label asp-for="hotel_name"> </label>                           
                <input asp-for="hotel_name" class="form-control" />
                <span  class="text-danger" asp-validation-for="hotel_name"></span>
            </div>
        </div>
        <div class="col-md-4 col-xs-6 col-sm-4">
            <div class="form-group">
                <label asp-for="destination_id"></label>
                <input asp-for="destination_id" class="form-control" />
                 <span  class="text-danger" asp-validation-for="destination_id"></span>
                @* <select id="dstn_id" name="destination_id" class="form-control custom-select">
                </select> *@
            </div>
        </div>
        <div class="col-md-4 col-xs-6 col-sm-4">
            <div class="form-group">
                <label asp-for="resort_id"></label>
                 <input class="form-control" asp-for="resort_id">
                   <span  class="text-danger" asp-validation-for="resort_id"></span>
                @* <select id="rst_id" name="resort_id" class="form-control custom-select">
                    <option value="" selected></option>
                </select> *@
            </div>
        </div>
        <div class="col-md-4 col-xs-4 col-sm-4">
            <div class="form-group">
                <label asp-for="city"></label>
                <input class="form-control" asp-for="city">
                <span  class="text-danger" asp-validation-for="city"></span>
            </div>
        </div>
    </div>
     <button name="Submit" id="update_btn" class="btn btn-sm btn-primary"  type="submit">
        Update</button>
 </form>