@model EditUserViewModel

@{
    ViewData["Title"] ="EditUsers";
}
<form asp-action="EditUsers" asp-controller="Administration" method="POST">
    <div class="row">
        <div class="col-md-4 col-xs-6 col-sm-4">
            <div class="form-group">
                <label asp-for="Id"> </label>                           
                <input readonly asp-for="Id" class="form-control" />
                <span  class="text-danger" asp-validation-for="Id"></span>
            </div>
        </div>
        <div class="col-md-4 col-xs-6 col-sm-4">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                 <span  class="text-danger" asp-validation-for="Email"></span>              
            </div>
        </div>
        <div class="col-md-4 col-xs-6 col-sm-4">
            <div class="form-group">
                <label asp-for="UserName"></label>
                 <input class="form-control" asp-for="UserName">
                   <span  class="text-danger" asp-validation-for="UserName"></span>              
            </div>
        </div>       
    </div>
     <button name="Submit" class="btn btn-sm btn-primary"  type="submit">
        Update</button>
        <a  class="btn btn-sm btn-danger" asp-action="ListUsers" asp-controller="Administration">
        Cancel</a>
 </form>

     <div class="card">
            <div class="card-header">
                <h3 class="card-title"> User Roles</h3>               
            </div>                      
            <div class="card-body">                          
                <div class="row">
                    <div class="col-md-12">
                       @if(Model.Roles.Any()){   
                            <table class="table table-striped table-bordered table-hover">
                                @* <thead>                                           
                                    <th>Name</th>                 
                                </thead> *@
                                <tbody>
                                @foreach (var role in Model.Roles){
                                    <tr>
                                        <td>@role</td>                     
                                    </tr>
                                }                       
                                </tbody>     
                            </table>  
                       }else{
                           <h3 class="card-title"> None at the moment</h3>
                       }                     
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserRoles" asp-route-id="@Model.Id" asp-controller="administration" 
                        class="btn btn-sm btn-danger">
                            Manage Role
                </a>  
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title"> User Claims</h3>               
            </div>                      
            <div class="card-body">                          
                <div class="row">
                    <div class="col-md-12">
                       @if(Model.Claims.Any()){   
                            <table class="table table-striped table-bordered table-hover">
                                @* <thead>                                           
                                    <th>Name</th>                 
                                </thead> *@
                                <tbody>
                                @foreach (var claim in Model.Claims){
                                    <tr>
                                        <td>@claim</td>                     
                                    </tr>
                                }                       
                                </tbody>     
                            </table>  
                       }else{
                           <h3 class="card-title"> None at the moment</h3>
                       }                     
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id" asp-controller="administration" 
                        class="btn btn-sm btn-danger">
                            Manage Claims
                </a>  
            </div>
        </div>





    

