
@model List<UserRolesViewModel>

@{
    var userid=ViewBag.userId;
}

<div class="card">
    <div class="card-header">
       <h3> Manage UserRole</h3>
    </div>                      
    <div class="card-body">                          
        <div class="row">
            <div class="col-md-12">   
                <form 
                    asp-action="ManageUserRoles" asp-controller="Administration" method="POST">    
                        <div class="row">       
                            <div class="col-sm-4">                            
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <input type="hidden" asp-for="@Model[i].RoleName"/>
                                    <input type="hidden" asp-for="@Model[i].RoleId"/>
                                    <input asp-for="@Model[i].IsSelected" class="form-check-input"/>
                                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                        @Model[i].RoleName
                                    </label>
                                }
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>      
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 text-center">
                                <button type="submit" asp-route-roleid="@userid" class="btn btn-primary">Submit</button>
                                <a asp-controller="Administration" asp-action="" 
                                asp-route-id="" class="btn btn-primary">Cancel</a>
                            </div>
                        </div>
                </form>        
           </div>          
        </div>
    </div>
</div>