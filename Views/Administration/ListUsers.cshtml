
@model IEnumerable<IdentityUser>

@if(Model.Any()){
   
      <table class="table table-striped table-bordered table-hover">
                <thead>
                    <th>UserId</th>
                    <th>Name</th>                  
                    <th>Action</th>    
                </thead>
                <tbody>
                 @foreach (var user in Model){
                    <tr>
                        <td>@user.Id</td>                       
                        <td>@user.UserName</td>
                        <td>
                             <a asp-controller="Administration" asp-action="EditUsers" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                             <form  asp-controller="Administration" asp-action="DeleteUsers" method="POST">
                                    <button  type="submit" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</button>
                             </form>                             
                        </td>                       
                    </tr>
                    }                       
                 </tbody>     
        </table>  
    

}else{
     <div class="card">
            <div class="card-header">
                @* <h3 class="card-title"></h3> *@
                No users created yet
            </div>                      
            <div class="card-body">                          
                <div class="row">
                    <div class="col-md-12">
                        <a asp-action="Register" asp-controller="accounts" 
                        class="btn btn-sm btn-danger">
                            create User
                        </a>                       
                    </div>
                </div>
            </div>
        </div>
}