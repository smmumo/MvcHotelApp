
@model IEnumerable<Rooms>
@{
    ViewData["Title"] = "Rooms";
}
<div class="row">
    <div class="col-md-12">
        <div id="allHotels">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    @* <th>HotelName</th> *@
                    @* <th>RoomName</th>
                    <th>Price</th>
                    <th>Adults</th>
                    <th>Children</th>
                    <th>Action</th>     *@

                    <th>
                        @Html.DisplayNameFor(model => model.RoomTypes.roomTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.number_of_adults)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.number_of_children)
                    </th>
                </thead>
                <tbody>
                    @foreach (var rooms in Model)
                    {              
                        <tr> 
                            <td>
                                @Html.DisplayFor(modelItem => rooms.RoomTypes.roomTypeName)
                            </td>                          
                            @* <td>@rooms.RoomTypes.roomTypeName</td> *@
                            <td>@rooms.price</td>
                            <td>@rooms.number_of_adults</td>  
                            <td>@rooms.number_of_children</td>  
                            <td> 
                                <form asp-action="Delete" asp-controller="Rooms" asp-route-id="@rooms.room_id" method="POST">
                                    <a asp-controller="Rooms" asp-action="edit" asp-route-id="@rooms.room_id" class="btn btn-sm btn-primary">Edit</a>
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>                                    
                                </form>                    
                            </td>           
                        </tr>             
                    }         
                </tbody>     
            </table> 
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/customScript.js"></script>
}